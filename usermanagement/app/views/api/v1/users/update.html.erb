    <head>
    <h1> Add User </h1>
    <%=form_for :users , url: { action: "update" }, method: 'post', remote: true do |f| %>
                  <input type="hidden" name="id" value="<%=@user.id%>">

      <div>
          <label for="name"> UserName </label>
          <input type="text" id="name" name="name" pattern="[a-zA-z]+" title="Only Alphabets" value="<%=@user.name%>" class="form-control" required/>
      </div>
      <div>
          <label for="email"> Email </label>
          <input type="text" id="email" name="email" pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,}$" title="Invalid mail id" value="<%=@user.email%>"  class="form-control" required/>
      </div>
      <div>
        <label for="gender"> Gender </label>
        <select name="gender" id="gender" required>
          <option selected><%=@user.gender%></option>
          <% if  @user.gender == "Male" %>
            <option value="female">Female</option>
          <% else %>
            <option value="male">Male</option>
          <% end%>
        </select>
      </div>
      <div>
        <label for="status"> Status </label>
        <div>
          <% if @user.status == "active" %>
            <input type="radio" id="myRadio" name="status" value="active" checked required> <label for="active">Active</label>
            <input type="radio" id="myRadio" name="status" style=margin-left:200px; value="inactive" required> <label for="inactive">Inactive</label>
          <% else %>
            <input type="radio" id="myRadio" name="status" value="active" required> <label for="active">Active</label>
            <input type="radio" id="myRadio" name="status" style=margin-left:200px; value="inactive" checked required> <label for="inactive">Inactive</label>
          <%end%>
        </div>
      </div>
      <br>
      <div>
        <input type="submit" class="button" value="Update">
      </div>
    <%end%>

  </head>
</html>

